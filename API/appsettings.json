{
  "ConnectionStrings": {
    "DefaultConnection": "Server=IDEAPAD1;Database=LearnEdge;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Secret": "YOUR_JWT_SECRET",
    "Issuer": "LearnEdge",
    "Audience": "LearnEdgeUsers",
    "ExpirationInHours": "24"
  },
  "SendGrid": {
    "ApiKey": "YOUR_SENDGRID_API_KEY",
    "FromEmail": "noreply@learnedge.com",
    "FromName": "LearnEdge"
  },
  "FileStorage": {
    "Type": "Local",
    "LocalPath": "wwwroot/uploads",
    "ContainerName": "learnedge-files"
  },
  "AdminUser": {
    "Email": "admin@learnedge.com",
    "Password": "YOUR_ADMIN_PASSWORD"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
